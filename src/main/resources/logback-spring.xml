<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <property name="LOG_PATH" value="logs"/>

    <!-- Filebeat Appender -->
    <appender name="FILEBEAT" class="ch.qos.logback.core.FileAppender">
        <file>${LOG_PATH}/app.json</file>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <customFields>{"app":"elk-logging-demo","env":"development"}</customFields>
        </encoder>
    </appender>

    <!-- Консоль для дебага -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- ВАЖНО: правильный pattern -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Корневой логгер -->
    <root level="INFO">
        <appender-ref ref="FILEBEAT"/>
        <appender-ref ref="CONSOLE"/>
    </root>

    <!-- Логгер для нашего приложения -->
    <logger name="com.github.annarybina" level="DEBUG"/>

</configuration>